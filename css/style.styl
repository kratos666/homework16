@import 'https://fonts.googleapis.com/css?family=Lato'
color1 = #303030
color2 = #222222
color3 = #e5e5e5
color4 = #fff
color5 = #606060;
color6 = #f68236
color7 = #f1f1f1
font-size = 14px
* 
	box-sizing border-box
	padding 0
	margin 0
ol
ul
	list-style none
blockquote
q
	quotes none
a
	text-decoration none
	color color1

h2
	padding 15px 0
	font-size 14px
	font-weight bold
	text-align left
h4
	padding 140px 0 35px
	font-size 72px
	font-weight bold
	text-align center
	text-transform uppercase
	color color2
.ital
	font-style italic
.button
	background color6
	border none
	text-transform uppercase
	padding 20px 45px
	color color4
	margin 40px 0 80px
.button-wrap
	text-align center
.white-button
	background-color color4
	color color1
	border 1px solid color1

.gr-bg
	background-color color7
.deepgrey-bg
	background-color #bbb
.verygr-bg
	background-color #606060
body
	line-height 1
	font-family: 'Lato', sans-serif;
	font-size 14px
	background-color color3 
	color color5
	.wrapper
		padding 35px
		max-width 1200px
		margin 0 auto
		background-color color4
header
	display flex
	padding-bottom 45px
	border-bottom  1px solid color3
	justify-content space-between
	>div
		align-self baseline
		padding 0 20px
	.logo
		padding 14px
		background color2
		color #fff
		align-self baseline
	.main-menu
		.items
			display flex
			.item a
				display inline-block
				padding 12px
	i
		vertical-align bottom
		background-position center center
		background-repeat no-repeat
		margin-right 5px
		display inline-block
		height 17px
		width (@height)
	.mem
		background-image: url(../images/user.png);

	.bask
		background-image url(../images/Ellipse-3.png)
	.login
		a
			color color6
/*serch*/
.search-form
	padding 0
	display inline-block
	.fieldwrap
		padding 0
		position relative
		input
			padding 12px
		.lens
			margin 0
			height 43px
			width (@height)
			background-color color1
			background-image:url(../images/lens.png)

			

.title
	color #000
	font-weight bold
	font-size 36px
	text-align center
	text-transform uppercase
/*content*/
.content
	.title
		padding 65px 0 20px

	.show
		text-decoration underline
		font-style italic
		font-size 18px
		font-family Georgia
		text-align center
		display block
		cursor pointer
		.arrow-min
			display inline-block
			width 0
			height 0
			border 4px solid transparent
			border-left-color color1
			border-right 0
			margin-left 10px
	.items
		flex-wrap wrap
		padding 60px 0 150px
		display flex
		justify-content space-between
		.gal-item
			text-align center
			.gal-name
				padding 30px 0 10px
				font-weight bold

/*slider*/
.slider-title
	font italic 24px / 27px Georgia
	color color5
	text-align center
	padding-bottom 40px
.slide-items
	background-color #bbb
	position relative
	display flex
	height 118px
	overflow hidden
	width 100%
	margin-bottom 40px
	.slide-item
		width (@width/6)
	:before
	:after
		top 0
		content ''
		position absolute
		width 40px
		height 100%
		background-color rgba(245, 245, 245, 0.3)
		background-position center center
		background-repeat no-repeat
		cursor pointer
	:before
		left 0
		background-image url(../images/arrow-l.png)
	:after
		right 0
		background-image:url(../images/arrow-r.png)


/*details*/
.item-image
	position relative
	img
		width 100%
	.prev
		position absolute
		bottom 0
		right 0
		margin 10px
		li
			border 2px solid color3
			width 70px
			height 70px
			margin-bottom 10px
			a
				display inline-block
				cursor pointer
.description
	text-align center
	padding 40px 0 60px
	p
		padding 10px
	.art
		font-size 12px
		padding 10px
		color #a3a3a3
	.cost
		font:italic 18px Georgia;
	.size
		line-height 16px
	.size-item
		display inline-block
		padding 8px
		border 1px solid color3
		margin-right 10px
	.grey-block
		text-transform uppercase
		color color5
/*main*/
.big
	font-size 24px
	text-align center
	font-family  Georgia;
.cube-wrap
	display flex
	flex-wrap wrap
	.column
		.rectangl
			display flex
			align-items center
			width 282px
			height (@width*2)
			flex-direction column
			justify-content center
		.cube
			padding 60px
			width 282px
			height (@width)
			display flex
			flex-direction column
			justify-content center
			align-items center
			text-align center

/*footer*/
footer
	display flex
	justify-content space-between
	.block-menu
		flex 1 1
		a
			line-height (font-size+7)
